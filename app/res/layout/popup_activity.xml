<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tensorflow.demo.PopUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareb"
            android:gravity="center"
            android:text="내 정보 수정"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/text_id"
            android:layout_marginTop="20dp"
            android:background="#AAAAAA"/>

    </LinearLayout>
    <!-- ID -->
    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 "
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/text_id"
        android:ems="10"
        android:maxLength="20" />

    <!-- PASSWORD -->
    <TextView
        android:id="@+id/text_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 "
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_id"
        android:layout_alignLeft="@+id/text_id"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="20"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/text_pw"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_pw" />

    <!-- NAME -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 "
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_pw"
        android:layout_alignLeft="@+id/text_pw"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/text_name"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_name" />

    <!-- PHONE -->
    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="15"
        android:inputType="phone"
        android:layout_alignBottom="@+id/text_phone"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_phone" />

    <!-- EMAIL -->
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_phone"
        android:layout_alignLeft="@+id/text_phone"
        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="30"
        android:inputType="textWebEmailAddress"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignBottom="@+id/text_email"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_email" />

    <!-- Address -->
    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_email"
        android:layout_alignLeft="@+id/text_email"
        />

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="100"
        android:inputType="textPostalAddress"
        android:layout_alignBottom="@+id/text_address"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_address" />

    <!-- GENDER -->
    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_address"
        android:layout_alignLeft="@+id/text_address"
        />

    <Button
        android:id="@+id/check_man"
        android:layout_width="123dp"
        android:layout_height="88px"
        android:layout_toRightOf="@+id/text_gender"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_alignLeft="@+id/edit_id"
        android:background="@drawable/pman_on" />

    <Button
        android:id="@+id/check_woman"
        android:layout_width="123dp"
        android:layout_height="88px"
        android:layout_toRightOf="@+id/check_man"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_marginLeft="10dp"
        android:background="@drawable/pwoman_off" />

    <!-- Plate -->
    <TextView
        android:id="@+id/text_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량 번호"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_gender"
        android:layout_alignLeft="@+id/text_gender"
        />

    <EditText
        android:id="@+id/edit_plate"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="100"
        android:inputType="textWebEmailAddress"
        android:layout_alignBottom="@+id/text_plate"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_plate" />

    <!-- Car -->
    <TextView
        android:id="@+id/text_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차종"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_plate"
        android:layout_alignLeft="@+id/text_plate"
        />

    <EditText
        android:id="@+id/edit_car"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/box"
        android:ems="10"
        android:maxLength="100"
        android:inputType="textWebEmailAddress"
        android:layout_alignBottom="@+id/text_car"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_toEndOf="@+id/text_car" />

    <Button
        android:layout_width="15dp"
        android:layout_height="28dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/back"
        android:onClick="mOnClose" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="910px"
        android:layout_height="120px"
        android:layout_alignBottom="@+id/edit_car"
        android:layout_marginBottom="-85dp"
        android:background="@drawable/update"
        android:layout_centerHorizontal="true" />

</RelativeLayout>