<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.tensorflow.demo.JoinActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:src="@drawable/logo"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#A9A9A9" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="회원가입"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/textView_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/nanumsquarel"
                android:text="회원가입을 위해\n정보를 입력해 주세요."
                android:textSize="22dp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:background="#696969" />
            <!--아이디-->
            <TextView
                android:id="@+id/textView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="아이디"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="영문 또는 숫자로 입력해 주세요."
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--비밀번호-->
            <TextView
                android:id="@+id/textView_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="영문 또는 숫자로 입력해 주세요."
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--이름-->
            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="한글 또는 영문으로 입력해 주세요."
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--성별-->
            <TextView
                android:id="@+id/textView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="성별"
                android:textColor="#000000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/check_man"
                    android:layout_width="170dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/man_on" />

                <Button
                    android:id="@+id/check_woman"
                    android:layout_width="170dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/woman_off" />
            </LinearLayout>

            <!--전화번호-->
            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="휴대전화 번호 10 ~ 11 자리"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--이메일-->
            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="예) example@example.com"
                android:inputType="textWebEmailAddress"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--주소-->
            <TextView
                android:id="@+id/textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="도로명 주소 또는 지번주소"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>


            <!--차량 번호-->
            <TextView
                android:id="@+id/textView_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="차량 번호"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_plate"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_edittext"
                android:hint="예) 12가3456"
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

            <!--차종-->
            <TextView
                android:id="@+id/textView_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="차종"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_car"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="300dp"
                android:background="@drawable/rounded_edittext"
                android:hint="영문 또는 숫자로 입력해 주세요."
                android:padding="10dp"
                android:textColor="#A9A9A9"
                android:textSize="15dp"></EditText>

        </LinearLayout>
    </ScrollView>
    <!--가입 버튼-->
    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/insert"/>

</LinearLayout>


